@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer


<div class="modal fade" id="staticBackdrop" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                @* 確認 *@
                <h5 class="modal-title" id="staticBackdropLabel">@Localizer["1"]</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @* 削除します。よろしいですか？ *@
                @Localizer["2"]
            </div>
            <div class="modal-footer">
                @* 戻る *@
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@Localizer["3"]</button>
                @* 削除 *@
                <button id="Delete" class="btn btn-primary" asp-page-handler="Delete">@Localizer["4"]</button>
            </div>
        </div>
    </div>
</div>
