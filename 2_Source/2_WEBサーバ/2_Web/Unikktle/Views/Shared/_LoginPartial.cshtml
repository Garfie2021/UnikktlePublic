@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Identity
@inject IViewLocalizer Localizer
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    <li class="nav-item">
        <a class="nav-link text-dark" href="https://mentor.xxx/">Mentor</a>
    </li>

    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@Localizer["4"]</a>
    </li>

    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                @* Logout *@
                <button type="submit" class="nav-link btn btn-link text-dark">@Localizer["3"]</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            @* Login *@
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">@Localizer["2"]</a>
        </li>
    }
</ul>