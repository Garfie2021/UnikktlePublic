@page
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model RegisterModel

@*  [英語] Register
    [日本語] ユーザー登録
*@
<h1>@Localizer["1"]</h1>

<p></p>
<partial name="_StatusMessage" for="StatusMessage" />
<div asp-validation-summary="All" class="text-danger"></div>
<p></p>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr class="s1">
            @*
        <div class="form-group">
        <label asp-for="Input.Name"></label>
        <input asp-for="Input.Name" class="form-control" />
        </div>
            *@
            <div class="form-group">
                @*Email*@
                <label>@Localizer["3"]</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*Password*@
                <label>@Localizer["4"]</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*Confirm password*@
                <label>@Localizer["5"]</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*Gender*@
                <label>@Localizer["6"]</label>
                <select asp-for="Input.Gender" class="form-control">
                    <option value="1">Man</option>
                    <option value="2">Woman</option>
                </select>
            </div>
            <div class="form-group">
                @*Birth Date*@
                <label>@Localizer["7"]</label>
                <input asp-for="Input.BirthDate" type="date" class="form-control" />
            </div>
            <div class="form-group">
                @*Career*@
                <label>@Localizer["8"]</label>
                <select asp-for="Input.Career" class="form-control">
                    @foreach (var category in Model.CareerList)
                    {
                        <optgroup label="@category.Name">
                            @foreach (var item in category.CareerList)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </optgroup>
                    }
                </select>
            </div>
            @*Register*@
            <button type="submit" class="btn btn-primary">@Localizer["9"]</button>
        </form>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
